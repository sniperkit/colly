{
    "version": 2,
    "name": "My lovely gateway",
    "port": 8080,
    "cache_ttl": "3600s",
    "timeout": "2500ms",
    "host": [ "http://127.0.0.1:8081/" ],
    "endpoints": [
        {
            "endpoint": "/fake/{something}",
            "concurrent_calls": 3,
            "backend": [
                {
                    "url_pattern": "/fake/{something}"
                }
            ]
        },
        {
            "endpoint": "/combination/{id}",
            "backend": [
                {
                    "url_pattern": "/combination/{id}",
                    "group": "backend1"
                },
                {
                    "url_pattern": "/combination/{id}",
                    "group": "backend2"
                }
            ]
        }
    ],
    "extra_config": {
        "github_com/devopsfaith/krakend-opencensus": {
            "sample_rate": 100,
            "reporting_period": 1,
            "enabled_layers": {
                "backend": true,
                "router": true,
            },
            "exporters": {
                "influxdb": {
                    "address": "http://192.168.99.100:8086",
                    "db": "krakend",
                    "timeout": "1s"
                },
                "zipkin": {
                    "collectorURL": "http://192.168.99.100:9411/api/v2/spans",
                    "serviceName": "krakend"
                },
                "prometheus": {
                    "port": 9091
                },
                "jaeger": {
                    "endpoint": "http://192.168.99.100:14268",
                    "serviceName":"krakend"
                },
                "logger": {
                    "stats": true,
                    "spans": true
                }
            }
        }
    }
}